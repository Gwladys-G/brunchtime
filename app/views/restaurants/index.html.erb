  <div class="d-flex justify-content-between" data-controller="see-map-or-list-button" >
    <div data-see-map-or-list-button-target="list">
      <%= form_tag restaurants_path, method: :get do %>

        <div class="search-form-control form-group d-flex"  style="width: 600px; margin: 0 auto;">
          <%= text_field_tag :location,
            params[:location],
            class: "form-control",
            placeholder: "Search locations..."
          %>
          <%= submit_tag "Find", class: "brunch-button brunch-button:hover" %>
        </div><br>

        <h6> Search by: </h6>
        <div class="search-form-control form-group d-flex" style="width: 600px; margin: 0 auto;">
          <select name=wait_time>
            <option value="">Select</option>
            <option value="5"> less < 5</option>
            <option value="10"> less < 10</option>
            <option value="15"> less < 15</option>
            <option value="30"> less < 30</option>
            <option value="60">less < 60</option>
            <%= submit_tag "Filter", class: "brunch-button brunch-button:hover" %>
          </select>
        </div>
      <% end %><br>
        <div class="container">
          <div class="row">
            <% @restaurants.each do |restaurant| %>
              <div class="card-product">
                <div>
                  <img src= "<%= cl_image_path (restaurant.photo.key)%>">
                </div>

                <div>
                  <h3><%= link_to restaurant.name, restaurant_path(restaurant) %></h3>
                  <p><b>Address:</b> <%= restaurant.address %></p>
                  <p><b>Wait-time:</b> <%= restaurant.wait_time %> min</p>
                </div>

                <div data-controller="toggle-favorite">
                  <%= link_to toggle_favorite_restaurant_path(restaurant), remote: true, method: :post, data: { action: "click->toggle-favorite#toggle" } do %>
                    <%= render 'like_button', restaurant: restaurant %>
                  <% end %>
                </div>
              </div>
            <%end %>
          </div>
        </div>
    </div>

    <div id="map" style="height: 300px; width: 600px" class = "d-none" data-see-map-or-list-button-target="map">
      <div style="width: 100%; height: 600px;"
        data-controller="mapbox"
        data-mapbox-markers-value="<%= @markers.to_json %>"
        data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>


    <button class="btn" data-action="click->see-map-or-list-button#show">
        See Map
    </button>

  </div>
