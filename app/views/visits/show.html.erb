<h1>On your way to <%= @restaurant.name %> !</h1>
<p>Address : <%= @restaurant.address %></p>
<p>Lat : <%= @restaurant.latitude %></p>
<p>long : <%= @restaurant.longitude %></p>


<%= link_to "I have arrived !", visit_arrived_path(@visit) %>
<%= link_to "back to brunch places", restaurants_path %>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <div style="width: 100%; height: 600px;"
      data-controller="mapdirection"
      data-mapdirection-marker-value="<%= @marker.to_json %>"
      data-mapdirection-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
    </div>
  </div>
</div>
